<?xml version="1.0" encoding="utf-8"?>
<sqlMapConfig xmlns="http://ibatis.apache.org/dataMapper" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <properties resource="IBatisNet.Properties.config"/>

  <settings>
    <setting useStatementNamespaces="true" />
  </settings>

  <providers resource="IBatisNet.Providers.config"/>

  <database>
    <provider name="${DatabaseProvider}"/>
    <dataSource name="Database" connectionString="${ConnectionString}"/>
  </database>

  <sqlMaps>

    <include resource="IBatisNet.SqlMaps.Ghost.Login.config"/>

  </sqlMaps>

</sqlMapConfig>
